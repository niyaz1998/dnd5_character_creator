import 'package:flutter/widgets.dart';
import 'package:flutter_bloc/flutter_bloc.dart';

import 'Name_state.dart';
export 'Name_state.dart';

class NameCubit extends GinCubit<NameState> {
  static LibraryCategoriesCubit of(BuildContext context) =>
      BlocProvider.of<LibraryCategoriesCubit>(context);

  LibraryCategoriesCubit({
    required this.someRepo,
  }) : super(const LibraryCategoriesState());

  final SomeRepo someRepo;

  @override
  Future<void> init() => AsyncField.execute<SomeType>(
        someRepo.fetchSomeType(),
        updater: (value) => emit(
          state.copyWith(
            field: value,
          ),
        ),
      );
}
